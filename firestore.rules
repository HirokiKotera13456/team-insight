rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users/{uid} - 本人のみ read/write
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // users/{uid}/axis_scores/{scoreId} - 本人のみ read/write
      match /axis_scores/{scoreId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
      
      // users/{uid}/assessment_history/{historyId} - 本人のみ read/write
      match /assessment_history/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
